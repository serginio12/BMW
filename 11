 $(window).scroll(function(){
        
        var scroll = $(this).scrollTop();
        
        
        if(scroll > $(this).offset().top - ($(window).height()/1.2
            ))
        {
          
            $(".benefits").addClass("animated bounceInRight");
    
        }
        
     
     if(scroll > $(".main-aford-left").offset().top - ($(window).height()/1.6
            ))
        {
          
            $(".main-aford-left").addClass("animated bounceInLeft");
    
        }

        
    });



